{
  "name": "convert-to-webp",
  "version": "1.0.0",
  "description": "S3にアップロードされた画像をWebpに変換する",
  "main": "serverless.ts",
  "scripts": {
    "deploy": "serverless deploy -v",
    "remove": "serverless remove -v",
    "lint:prettier": "prettier 'src/**/*.{js,ts,json}' --check",
    "fix:prettier": "yarn run lint:prettier --write",
    "lint:eslint": "eslint 'src/**/*.{js,ts}'",
    "fix:eslint": "eslint --fix 'src/**/*.{js,ts}'",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "format": "yarn run fix:prettier && yarn run fix:eslint"
  },
  "dependencies": {
    "@middy/core": "^2.0.1",
    "aws-sdk": "^2.888.0",
    "sharp": "^0.28.1",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@serverless/typescript": "^2.35.0",
    "@types/aws-lambda": "^8.10.75",
    "@types/node": "^14.14.41",
    "@types/prettier": "^2.2.3",
    "@types/sharp": "^0.28.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "prettier": "^2.2.1",
    "serverless": "^2.35.0",
    "serverless-prune-plugin": "^1.5.0",
    "serverless-webpack": "^5.4.1",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.2.4",
    "webpack": "^5.33.2",
    "webpack-node-externals": "^2.5.2"
  },
  "author": "https://github.com/nekochans",
  "license": "MIT"
}
